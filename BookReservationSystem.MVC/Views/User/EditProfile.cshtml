@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BookReservationSystem.Domain.UserDto
@{
    ViewData["Title"] = "Edit profile";
}

<div class="row">
    <div class="col s12">
        @using (Html.BeginForm("EditProfile", "User"))
        {
            @Html.AntiForgeryToken()
            <p class="text-red">@Html.ValidationSummary(true, "")</p>
            @Html.HiddenFor(model => model.Id)

            <div class="row valign-wrapper">
                <div class="col s12 l4">First name:</div>
                <div class="input-field col s12 l8">
                    @Html.TextBoxFor(model => model.FirstName)
                </div>
            </div>
            <div class="row valign-wrapper">
                <div class="col s12 l4">Last name:</div>
                <div class="input-field col s12 l8">
                    @Html.TextBoxFor(model => model.LastName)
                </div>
            </div>
            <div class="row valign-wrapper">
                <div class="col s12 l4">Email:</div>
                <div class="input-field col s12 l8">
                    @Html.TextBoxFor(model => model.Email)
                </div>
            </div>

            <div class="form-group mt-1">
                <input type="submit" value="Confirm changes" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
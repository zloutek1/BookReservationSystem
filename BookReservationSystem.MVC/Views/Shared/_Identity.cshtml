@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (User.Identity is {IsAuthenticated: true })
    {
        <li class="nav-item">
            <a  class="nav-link text-dark" asp-controller="User" asp-action="Profile">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form  class="form-inline" asp-controller="Identity" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Login">Login</a>
        </li>
    }
</ul>